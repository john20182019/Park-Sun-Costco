{% schema %}
  {
    "name": "Contact Us Page",
	"class":"contact-us-page",
    "settings": [
		{
			"type":"image_picker",
			"id":"banner",
			"label":"Banner Image"
		},
		{
			"type":"text",
			"id":"subtitle",
			"label":"Subtitle"
		},
		{
			"type":"text",
			"id":"extra-title-1",
			"label":"Customer Service Inquiries Title"
		},
		{
			"type":"textarea",
			"id":"csi-content",
			"label":"Customer Service Inquiries Content"
		},
		{
			"type":"text",
			"id":"extra-title-2",
			"label":"Email Us Title"
		},
		{
			"type":"text",
			"id":"email-address",
			"label":"Email Address"
		},
		{
			"type":"text",
			"id":"extra-title-4",
			"label":"Returns Title"
		},
		{
			"type":"textarea",
			"id":"returns-content",
			"label":"Returns Content"
		},
		{
			"type":"text",
			"id":"extra-title-3",
			"label":"Call Us Title"
		}
				],
	"blocks":[
		{
			"type":"numbers",
			"name":"Phone Numbers",
			"settings":[
				{
					"type":"text",
					"id":"country",
					"label":"Country Abbreviation"
				},
				{
					"type":"text",
					"id":"number",
					"label":"Phone Number"
				},
				{
					"type":"text",
					"id":"number-for-link",
					"label":"Number for Link (NO SPACES OR CHARACTERS)"
				},
				{
					"type":"text",
					"id":"hours",
					"label":"Hours of Operation"
				}
					   ]
		}
			 ]
  }
{% endschema %}

