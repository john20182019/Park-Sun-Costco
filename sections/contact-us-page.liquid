<div class="banner-image"><img src="{{ section.settings.banner | img_url: 'master' }}" alt="{{ section.settings.banner.alt }}"></div>
<h1 class="title">Contact Us</h1>
<div class="sub-title">{{ section.settings.subtitle }}</div>

<div class="grey-content-wrapper grid">
  <dl class="inquiries grid__item medium-up--one-half">
    <div class="extra-title">{{ section.settings.extra-title-1 }}</div>
    <div>{{ section.settings.csi-content }}</div>
    <div class="extra-title emailus">{{ section.settings.extra-title-2 }}</div>
    <div><a href="mailto:{{ section.settings.email-address }}" aria-label="Email Us">{{ section.settings.email-address }}</a></div>
    <div class="extra-title emailus">{{ section.settings.extra-title-4 }}</div>
    <div>{{ section.settings.returns-content }}</div>
  </dl>
  <dl class="call-us grid__item medium-up--one-half">
    <dt class="extra-title">{{ section.settings.extra-title-3 }}</dt>
    {% for block in section.blocks %}
    <dd><span class="span1">{{ block.settings.country }}</span><span class="span2"><a class="telephone-link-1" href="tel:{{ block.settings.number-for-link }}">{{block.settings.number}}</a></span><span class="span3">{{ block.settings.hours }}</span></dd>
    {% endfor %}
