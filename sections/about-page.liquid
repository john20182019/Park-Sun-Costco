<div class="top-banner" role="img" aria-label="" style=" background-image:url({{ section.settings.top-banner | img_url: 'master' }}); background-position:bottom center; background-size:cover; background-repeat:no-repeat;height:550px; ">
  <div class="content-wrapper">
    <h1 class="title">{{ section.settings.title }}</h1>
    <hr>
    <div class="copy">{{ section.settings.copy }}</div>
	
  </div>
</div>

