		{
			"type":"image_picker",
			"id":"logo-image",
			"label":"Logo"
		},
		{
			"type":"textarea",
			"id":"bottom-copy",
			"label":"Copy"
		},
		{
			"type":"image_picker",
			"id":"item-image",
			"label":"Item Image"
		}
				],
	"blocks":[
		{
			"type":"sponsors",
			"name":"sponsors",
